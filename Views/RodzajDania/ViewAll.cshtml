@model IEnumerable<restauracjaTI.Models.DbModels.RodzajDania>

@{
    ViewBag.Title = "ViewAll";
}

<div class="container-main">

    <h2>Rodzaje dań</h2>
    <p>Oby było ich jak najwięcej! &#129488;</p>
    <p>
        @Html.ActionLink("Dodaj nowy rodzaj dania", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NazwaRodzaju)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NazwaRodzaju)
                </td>
                <td>
                    @Html.ActionLink("Edytuj", "Edit", new { id = item.RodzajDaniaId }) |
                    @Html.ActionLink("Usuń", "Delete", new { id = item.RodzajDaniaId })
                </td>
            </tr>
        }

    </table>

</div>
